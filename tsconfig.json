{
  "compilerOptions": {
    "target": "ES2017",
    "module": "es2015",
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "outDir": "./dist/",
    "removeComments": true,
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node" ,
    "esModuleInterop": true
  },

  
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}

